<div class="chapter-card">
  <div class="chapter-header">
    <span>
      <span class="ch-num">Chapter {{ chapterData.data.chapter }}:</span>
      <span class="ch-title">{{ chapterData.data.title }}</span>
    </span>
    <svg class="chevron" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg>
  </div>

  <div class="chapter-body">
    <div class="ch-body-grid">
      {% if chapterData.data.terms and chapterData.data.terms.length %}
      <div class="ch-terms">
        <h3>Definitions you might find helpful</h3>
        <dl class="terms">
          {% for t in chapterData.data.terms %}
          <dt>{{ t.term }}</dt>
          <dd>{{ t.def }}</dd>
          {% endfor %}
        </dl>
      </div>
      {% endif %}
      <div class="ch-summary">
        <div class="summary">{{ chapterData.templateContent | safe }}</div>
        {% if chapterData.data.takeaways %}
        <h3>Why it Matters</h3>
        <blockquote class="takeaways">{{ chapterData.data.takeaways }}</blockquote>
        {% endif %}
      </div>
    </div>
  </div>
</div>